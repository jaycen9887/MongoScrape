<div id="main">
    <div class="row">
        <div id="card" class="col s12">
        <div id="img-text" class="center-align">
            <h1>Mongo Scraper</h1>
            <h5>Indeed.com Edition</h5>
        </div>
    </div>
    </div>
    
    <div id="output">
        <div class="row">
            <div class="col s12">
                <table>
                    <tbody>
                        {{#each articles}}
                        <div class="row">
                            <div class="col s8">
                                <a href="{{this.link}}" class="scrape-title" target="_blank">{{this.title}}</a>
                            </div>
                            <div class="col s4">
                                <a id="{{this.id}}" href="/save"><i class="small material-icons">save</i></a>
                            </div>
                        </div>  
                        {{/each}}  
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>